# Docker Environment Variables
# Copy this file to .env.docker and fill in the values

# Application
NODE_ENV=production
PORT=3000

# Database
MONGODB_URI=mongodb://hippogriff_user:your_mongo_app_password@mongo:27017/hippogriff
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=your_strong_root_password
MONGO_APP_PASSWORD=your_strong_app_password

# Redis
REDIS_PASSWORD=your_strong_redis_password

# JWT Secrets (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secure-jwt-secret-here-change-this
JWT_REFRESH_SECRET=your-super-secure-jwt-refresh-secret-here-change-this

# Security
CSP_MODE=enforce
LOG_LEVEL=info

# Monitoring
GRAFANA_PASSWORD=your_strong_grafana_password

# SSL Certificates (for production)
# Place your SSL certificates in nginx/ssl/ directory
# - cert.pem (certificate file)
# - key.pem (private key file)
